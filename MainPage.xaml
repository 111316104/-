<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PD_app.MainPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#ccd5ae">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="20"
                Spacing="20"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <!-- 內容外框，限制在平板的最大寬度 -->
                <VerticalStackLayout
                    Spacing="20"
                    WidthRequest="400"
                    MaximumWidthRequest="450"
                    HorizontalOptions="Center">

                    <Image 
                        Source="logo.png" 
                        WidthRequest="200" 
                        HeightRequest="200"
                        HorizontalOptions="Center" />

                    <Label 
                        Text="歡迎使用本系統"
                        FontSize="32"
                        TextColor="Black"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center" />

                    <!-- 帳號 -->
                    <Label 
                        Text="👤 帳號"
                        FontSize="20"
                        TextColor="Black" />

                    <Entry 
                        x:Name="usernameEntry"
                        Placeholder="請輸入帳號"
                        FontSize="20"
                        HeightRequest="55"
                        BackgroundColor="White"
                        TextColor="Black"
                        HorizontalOptions="Fill"
                        MaximumWidthRequest="450" />

                    <!-- 密碼 -->
                    <Label 
                        Text="🔒 密碼"
                        FontSize="20"
                        TextColor="Black" />

                    <Entry 
                        x:Name="passwordEntry"
                        Placeholder="請輸入密碼"
                        IsPassword="True"
                        FontSize="20"
                        HeightRequest="55"
                        BackgroundColor="White"
                        TextColor="Black"
                        HorizontalOptions="Fill"
                        MaximumWidthRequest="450" />

                    <!-- 登入 -->
                    <Button 
                        Text="登入"
                        FontSize="20"
                        HeightRequest="60"
                        BackgroundColor="#A18276"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Fill"
                        MaximumWidthRequest="450"
                        Clicked="OnLoginClicked"/>

                    <!-- 前往註冊 -->
                    <Button 
                        Text="前往註冊"
                        FontSize="20"
                        HeightRequest="60"
                        BackgroundColor="White"
                        TextColor="Black"
                        BorderColor="Black"
                        BorderWidth="1"
                        CornerRadius="10"
                        HorizontalOptions="Fill"
                        MaximumWidthRequest="450"
                        Clicked="OnRegisterClicked"/>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
